
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model MonobankSetting {
  id        Int      @id @default(autoincrement())
  shop      String   @unique // Домен магазину
  apiToken  String   // Зашифрований токен Monobank
  iv        String   // Вектор ініціалізації для шифрування
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PendingPayment {
  id                Int      @id @default(autoincrement())
  shopifyOrderId    String   @unique // GraphQL ID замовлення з Shopify
  monobankInvoiceId String   @unique // ID рахунку з Monobank
  monobankPageUrl   String   // Посилання на сторінку оплати
  shop              String   // Домен магазину
  createdAt         DateTime @default(now())
}